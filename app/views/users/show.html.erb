
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <% if @user.image.attached? %>
    <%= image_tag @user.image %>
  <% end %>
</p>

<p>
  <strong><%= link_to 'See all notes', note_path %></strong>
</p>

<% if logged_in? && (current_user == @user || current_user.admin?) %>
  <%= link_to 'Edit', edit_user_path(@user) %>
  <%= link_to 'Delete', user_path(@user), method: :delete, data: {confirm: "you want to delete this user?"} %>
<% end %>

<%= link_to 'Back', users_path %>
