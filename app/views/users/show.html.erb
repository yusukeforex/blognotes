<div class = "container">
  <div class = "row">
    <div class = "profile col-sm-12">
    <h3>Profile</h3>
      <ul>
        <li>
          <strong>Name:</strong>
          <%= @user.name %>
        </li>
        <li>
          <strong>Email:</strong>
          <%= @user.email %>
        </li>
        <li>
          <% if @user.image.attached? %>
            <% image_tag @user.image %> <%# temporary commented out %>
          <% end %>
        </li>
        <li>
          <strong><%= link_to 'See all notes', notes_path, :class => 'seenotes' %></strong>
        </li>
          <% if logged_in? && (current_user == @user || current_user.admin?) %>
            <%= link_to "New Note", new_note_path, :class => 'btn btn-outline-primary col-sm-12' %>
            <%= link_to 'Edit', edit_user_path(@user), :class => 'btn btn-outline-info col-sm-12' %><br>
            <%= link_to 'Delete', user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete this user?"}, :class => 'btn btn-outline-danger col-sm-12' %><br>
          <% end %>
            <%= link_to 'Back', users_path, :class => 'btn btn-outline-light col-sm-12' %>
      </ul>
    </div>
  </div>
</div>


